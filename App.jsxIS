// Storage utilities
const STORAGE_KEY = 'instagram_stories_data';
const FEED_STORAGE_KEY = 'instagram_feed_data';

const saveToStorage = (stories, feed) => {
  try {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(stories));
    localStorage.setItem(FEED_STORAGE_KEY, JSON.stringify(feed));
  } catch (error) {
    console.error('Error saving to localStorage:', error);
  }
};

const loadFromStorage = () => {
  try {
    const storiesData = localStorage.getItem(STORAGE_KEY);
    const feedData = localStorage.getItem(FEED_STORAGE_KEY);
    return {
      stories: storiesData ? JSON.parse(storiesData) : INITIAL_STORIES,
      feed: feedData ? JSON.parse(feedData) : FEED_POSTS
    };
  } catch (error) {
    console.error('Error loading from localStorage:', error);
    return { stories: INITIAL_STORIES, feed: FEED_POSTS };
  }
};

