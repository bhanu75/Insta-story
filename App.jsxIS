            {post.comments.map((c, i) => (
              <p key={i} className="text-sm">
                <span className="font-semibold mr-2">{c.username}</span>
                {c.text}
              </p>
            ))}
          </div>
        )}

        <p className="text-xs text-gray-500 mb-2">{getTimeAgo(post.timestamp)}</p>

        <form onSubmit={handleCommentSubmit} className="flex items-center gap-2 border-t border-gray-100 pt-2">
          <input
            type="text"
            value={comment}
            onChange={(e) => setComment(e.target.value)}
            placeholder="Add a comment..."
            className="flex-1 text-sm focus:outline-none"
          />
          <button
            type="submit"
            disabled={!comment.trim()}
            className={`text-sm font-semibold ${comment.trim() ? 'text-blue-500' : 'text-gray-400'}`}
          >
            Post
          </button>
        </form>
      </div>
    </div>
  );
};

export default function App() {
  const [stories, setStories] = useState([]);
  const [feedPosts, setFeedPosts] = useState([]);
  const [loading, setLoading] = useState(true);
  const [selectedUserIndex, setSelectedUserIndex] = useState(null);
  const [viewedStories, setViewedStories] = useState(new Set());
  const [showAddStory, setShowAddStory] = useState(false);

  const currentUser = {
    id: 0,
    username: 'Your Story',
    avatar: 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?w=150&h=150&fit=crop',
    stories: []
  };

  useEffect(() => {
    const fetchData = async () => {
      try {
        setLoading(true);
        const { stories: savedStories, feed: savedFeed } = loadFromStorage();
        await new Promise(resolve => setTimeout(resolve, 500));
        setStories(savedStories);
        setFeedPosts(savedFeed);
      } catch (error) {
        console.error('Error fetching data:', error);
      } finally {
        setLoading(false);
      }
    };

    fetchData();
  }, []);

  useEffect(() => {
    if (!loading && stories.length > 0) {
      saveToStorage(stories, feedPosts);
    }
  }, [stories, feedPosts, loading]);

  const handleStoryClick = (index) => {
    setSelectedUserIndex(index);
    setViewedStories(prev => new Set([...prev, stories[index].id]));
  };

  const handleCloseStory = () => {
    setSelectedUserIndex(null);
  };

  const handleNavigate = (direction) => {
    if (direction === 'nextUser' && selectedUserIndex < stories.length - 1) {
      const nextIndex = selectedUserIndex + 1;
      setSelectedUserIndex(nextIndex);
      setViewedStories(prev => new Set([...prev, stories[nextIndex].id]));
    } else if (direction === 'prevUser' && selectedUserIndex > 0) {
      const prevIndex = selectedUserIndex - 1;
      setSelectedUserIndex(prevIndex);
      setViewedStories(prev => new Set([...prev, stories[prevIndex].id]));
    }
  };

  const handleAddStory = (storyData) => {
    const newStory = {
      id: `s_${Date.now()}`,
      image: storyData.image,
      caption: storyData.caption,
      timestamp: new Date().toISOString(),
      comments: [],
      liked: false
    };

    setStories(prev => {
      const userStoryIndex = prev.findIndex(u => u.id === 0);
      if (userStoryIndex >= 0) {
        const updated = [...prev];
        updated[userStoryIndex].stories.push(newStory);
        return updated;
      } else {
        return [{
          ...currentUser,
          stories: [newStory]
        }, ...prev];
      }
    });
  };

  const handleLike = (userId, storyId) => {
    setStories(prev => prev.map(user => {
      if (user.id === userId) {
        return {
          ...user,
          stories: user.stories.map(story => 
            story.id === storyId ? { ...story, liked: !story.liked } : story
          )
        };
      }
      return user;
    }));
  };

  const handleComment = (userId, storyId, text) => {
    const newComment = {
      id: `c_${Date.now()}`,
      username: 'You',
      text,
      timestamp: new Date().toISOString()
    };

    setStories(prev => prev.map(user => {
      if (user.id === userId) {
        return {
          ...user,
          stories: user.stories.map(story => 
            story.id === storyId 
              ? { ...story, comments: [...story.comments, newComment] }
              : story
          )
        };
      }
      return user;
    }));
  };

  const handleFeedLike = (postId) => {
    setFeedPosts(prev => prev.map(post => 
      post.id === postId ? { ...post, likes: post.likes + 1 } : post
    ));
  };

  const handleFeedComment = (postId, text) => {
    const newComment = {
      username: 'You',
      text
    };

    setFeedPosts(prev => prev.map(post => 
      post.id === postId 
        ? { ...post, comments: [...post.comments, newComment] }
        : post
    ));
  };

  const userStory = stories.find(u => u.id === 0) || currentUser;
  const otherStories = stories.filter(u => u.id !== 0);

  if (loading) {
    return (
      <div className="min-h-screen bg-white flex items-center justify-center">
        <div className="w-12 h-12 border-4 border-gray-300 border-t-gray-800 rounded-full animate-spin" />
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-white">
      <div className="max-w-md mx-auto">
        <div className="flex items-center justify-between p-4 border-b border-gray-200">
          <h1 className="text-2xl font-bold">Instagram</h1>
          <div className="flex gap-4">
            <button 
              onClick={() => setShowAddStory(true)}
              className="text-gray-800"
            >
              <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v16m8-8H4" />
              </svg>
            </button>
            <button className="text-gray-800">
              <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </button>
            <button className="text-gray-800">
              <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </button>
          </div>
        </div>

        <div className="overflow-x-auto px-4 py-3 border-b border-gray-200">
          <div className="flex gap-4">
            <div 
              onClick={() => userStory.stories.length > 0 ? handleStoryClick(stories.indexOf(userStory)) : setShowAddStory(true)}
              className="flex flex-col items-center gap-1 flex-shrink-0 cursor-pointer"
            >
              <div className="relative">
                <div className={`p-0.5 rounded-full ${userStory.stories.length > 0 ? 'bg-gradient-to-tr from-yellow-400 via-red-500 to-purple-500' : 'bg-gray-300'}`}>
                  <div className="p-0.5 bg-white rounded-full">
                    <img
                      src={currentUser.avatar}
                      alt="Your Story"
                      className="w-16 h-16 rounded-full object-cover"
                    />
                  </div>
                </div>
                {userStory.stories.length === 0 && (
                  <div className="absolute bottom-0 right-0 bg-blue-500 text-white rounded-full w-5 h-5 flex items-center justify-center border-2 border-white">
                    <svg className="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={3} d="M12 4v16m8-8H4" />
                    </svg>
                  </div>
                )}
              </div>
              <span className="text-xs text-gray-800">Your Story</span>
            </div>

            {otherStories.map((user, index) => (
              <StoryThumbnail
                key={user.id}
                user={user}
                onClick={() => handleStoryClick(stories.indexOf(user))}
                isActive={viewedStories.has(user.id)}
              />
            ))}
          </div>
        </div>

        <div className="pb-16">
          {feedPosts.map(post => (
            <FeedPost
              key={post.id}
              post={post}
              onLike={handleFeedLike}
              onComment={handleFeedComment}
            />
          ))}
        </div>
      </div>

      {selectedUserIndex !== null && (
        <StoryViewer
          user={stories[selectedUserIndex]}
          onClose={handleCloseStory}
          onNavigate={handleNavigate}
          currentUserIndex={selectedUserIndex}
          totalUsers={stories.length}
          onLike={handleLike}
          onComment={handleComment}
        />
      )}

      {showAddStory && (
        <AddStoryModal
          onClose={() => setShowAddStory(false)}
          onAdd={handleAddStory}
        />
      )}
    </div>
  );
}